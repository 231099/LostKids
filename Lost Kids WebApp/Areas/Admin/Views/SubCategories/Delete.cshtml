@model SubCategory
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*Delete sub-Category Page*@

<form asp-action="Delete" method="post">
    <h2 class="text-info">Delete Sub-Category </h2>

    <div class="WhiteBackground border">
        <div class="form-group row">
            <div class="col-2">
                @Html.HiddenFor(m => m.Id)

                <label asp-for="Category.Name" class="col-form-label"></label>
            </div>
            <div class="col-5 ">
                <input asp-for="Category.Name" readonly class="form-control" />
            </div>
        </div>


        <div class="form-group row">
            <div class="col-2">
                @Html.HiddenFor(m => m.Id)

                <label asp-for="Name" class="col-form-label"></label>
            </div>
            <div class="col-5 ">
                <input asp-for="Name" readonly class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <div class="col-5 offset-2">
                <partial name="_DeleteAndBackButtonsPartial" />
            </div>

        </div>

    </div>
</form>


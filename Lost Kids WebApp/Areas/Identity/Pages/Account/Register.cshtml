@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<br />
<h2 class="text-info">Create New Account</h2>
<br />

<form asp-route-returnUrl="@Model.ReturnUrl" method="post">
    <div class="WhiteBackground border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Input.Name" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Input.Name" class="form-control" />
                <span class="text-danger" asp-validation-for="Input.Name"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Input.Email" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Input.Email" class="form-control" />
                <span class="text-danger" asp-validation-for="Input.Email"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Input.PhoneNumber" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <span class="text-danger" asp-validation-for="Input.PhoneNumber"></span>
            </div>
        </div>


        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Input.StreetAddress" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Input.StreetAddress" class="form-control" />
                <span class="text-danger" asp-validation-for="Input.StreetAddress"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Input.Governorate" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Input.Governorate" class="form-control" />
                <span class="text-danger" asp-validation-for="Input.Governorate"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Input.City" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Input.City" class="form-control" />
                <span class="text-danger" asp-validation-for="Input.City"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Input.PostalCode" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Input.PostalCode" class="form-control" />
                <span class="text-danger" asp-validation-for="Input.PostalCode"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Input.Password" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Input.Password" class="form-control" />
                <span class="text-danger" asp-validation-for="Input.Password"></span>
            </div>
        </div>



        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Input.ConfirmPassword" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span class="text-danger" asp-validation-for="Input.ConfirmPassword"></span>
            </div>
        </div>




        @if (User.IsInRole(SD.AdminUser))
        {
            <div class="form-group row">
                <div class="col-2">
                </div>
                <div class="col-5">
                    <label class="form-check-label">
                        <input type="radio" value="@SD.AdminUser" name="rdUserRole" /> @SD.AdminUser
                    </label>
                    <label class="form-check-label">
                        <input type="radio" value="@SD.EndUser" name="rdUserRole" checked /> @SD.EndUser
                    </label>
                </div>
            </div>
        }

        <div class="form-group row">
            <div class="col-5 offset-2 row">
                <button class="btn btn-success form-control" type="submit"> Register</button>
            </div>
        </div>

    </div>

</form>
<div class="col-md-6 col-md-offset-2 form-group">
    <section>
        <h4 class="text-primary">*Attention</h4>
        <h5 class="text-danger">..After Pressing The Register Button Go To My Account From Content Navigation
        Then Click Email And Press Send Verification Email To Complete Your Registeration
        </h5>
    </section>


</div>

